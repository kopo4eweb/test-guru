<div class="card">
  <div class="card-body">
    <%= form_with model: [:admin, @test], local: true do |form| %>
      <%= render 'shared/errors', resource: @test %>

      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.check_box :public %>
        <%= form.label :public %>
      </div>

      <div class="form-group">
        <%= form.label :time_for_test, for: :test_time_for_test_minuts %>        
        <%= form.number_field :time_for_test_minuts, in: 0..720, class: 'form-control time_for_test_minuts' %>
        <%= form.hidden_field :time_for_test, class: 'time_for_test_seconds' %>
        <small class="form-text text-muted"><%= t('.notice_time_for_test') %></small>
      </div>

      <div class="form-group">
        <%= form.label :level %>
        <%= form.text_field :level, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :category_id %>
        <%= form.collection_select :category_id, Category.all, :id, :title, {prompt: true}, {class: 'form-control'} %>
      </div>

      <%= form.submit class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

