<h1 class="mb-4"><%= t('.header') %></h1>

<p><%= link_to t('.link_add'), new_admin_test_path, class: 'btn btn-primary', role: 'button' %></p>

<%= render 'shared/errors', resource: @test %>

<table class="table table-striped mt-4">
  <thead class="thead-light">
    <tr>
      <th class='align-middle' scope="col">id</th>
      <th class='align-middle' scope="col" class="sort-by-title pointer">
        <%= t('.title') %>
        <%= octicon "arrow-up", class: "text-success hide" %>
        <%= octicon "arrow-down", class: "text-success hide" %>
      </th>
      <th class='align-middle' scope="col"><%= t('.category') %></th>
      <th class='align-middle' scope="col"><%= t('.public') %></th>
      <th class='align-middle' scope="col"><%= t('.level') %><br><%= t('.time_for_test') %></th>
      <th class='align-middle' scope="col"><%= t('.questions') %></th>
      <th class='align-middle' colspan="3" scope="col"><%= t('.actions') %></th>
    </tr>
  </thead>
  <tbody>
    <%= render @tests %>
  </tbody>
</table>