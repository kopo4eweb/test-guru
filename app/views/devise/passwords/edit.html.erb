<div class="row justify-content-center">
  <div class="col col-sm-10 col-md-8 col-lg-5">
    <h2 class='mb-4'><%= t('.header') %></h2>

    <div class="card">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="form-group">
            <%= f.label :password, t('.new_password') %>
            <% if @minimum_password_length %>
              <em><%= t('.min_password', length: @minimum_password_length) %></em>
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, t('.confirm_password') %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
          </div>

          <%= f.submit t('.submit'), class: 'btn btn-primary w-100' %>
        <% end %>
      </div>
    </div>

    <%= render "devise/shared/links" %>
  </div>
</div>

