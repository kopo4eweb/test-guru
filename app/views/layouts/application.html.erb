<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
      <nav class="nav">
        <div class="container">
          <%= link_to 'TestGuru', root_path, class: 'nav__logo' %>

          <ul class="nav__list">
            <% if user_signed_in? %>
              <li class="nav__item"><%= t('nav.welcome', email: current_user.email).html_safe %></li>
              <li class="nav__item"><%= link_to t('nav.logout'), destroy_user_session_path, method: :delete %></li>
            <% else %>
              <li class="nav__item"><%= link_to t('nav.login'), new_user_session_path %></li>
              <li class="nav__item"><%= link_to t('nav.signup'), new_user_registration_path %></li>
            <% end %>
          </ul>
        </div>
      </nav>

      <div class="container">
        <%= output_flash %>

        <%= yield %>
      </div>

    <footer>
      <hr>
      <div class="container">
        <p><%= t('footer.descr') %></p>
        <p><%= t('footer.school', link: link_to('Thinknetica', 'https://thinknetica.com/', target: '_blank')).html_safe %></p>
        <p><%= t('footer.author', year: year, link: github_url('kopo4eweb', 'test-guru')).html_safe %></p>
      </div>
    </footer>    
  </body>
</html>
